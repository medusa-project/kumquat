-# Import-vocabulary modal

#dl-import-modal.modal.fade{"aria-labelledby": "dl-import-modal-label",
                            role: "dialog",
                            tabindex: "-1"}
  .modal-dialog.modal-dialog-centered{role: "document"}
    .modal-content
      = form_tag(admin_vocabulary_import_path(format: :json),
                 { multipart: true }) do
        .modal-header
          %h4#dl-import-modal-label.modal-title Import Vocabulary
          %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
            %span{"aria-hidden": "true"} Ã—
        .modal-body
          = file_field_tag('vocabulary')
        .modal-footer
          %button.btn.btn-light{"data-dismiss": "modal", type: "button"} Cancel
          %button.btn.btn-primary{type: "submit"} Import
