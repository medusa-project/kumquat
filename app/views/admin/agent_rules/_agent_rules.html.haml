%table.table.table-striped
  %thead
    %th{style: "width: 1px"}
    %th Name
    %th Abbreviation
  %tbody
    - @agent_rules.each do |rule|
      %tr
        %td{style: "white-space: nowrap"}
          .btn-group
            %button.btn.btn-light.btn-sm.dl-edit-agent-rule{"data-agent-rule-id": "#{rule.id}",
                                                            "data-target": "#dl-edit-agent-rule-modal",
                                                            "data-toggle": "modal",
                                                            type: "button"}
              %i.fas.fa-pencil-alt
              Edit
            = button_to(admin_agent_rule_path(rule),
                        class: 'btn btn-danger btn-sm',
                        method: :delete,
                        data: { confirm: 'Are you sure you want to delete this agent rule?' }) do
              %i.fa.fa-trash
              Delete
        %td= rule.name
        %td= rule.abbreviation
