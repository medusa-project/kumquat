-# Add-profile modal
#dl-add-profile-modal.modal.fade{"aria-labelledby": "dl-add-profile-modal-label",
                                 role: "dialog",
                                 tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %h4#dl-add-profile-modal-label.modal-title Add Profile
        %button.close{"aria-label": "Close",
                      "data-dismiss": "modal",
                      type: "button"}
          %span{"aria-hidden": "true"} Ã—
      .modal-body
        = render partial: 'form', locals: { metadata_profile: @new_profile,
                                            context: :new }
