%table.table.table-striped
  %thead
    %th{style: "width: 1px"}
    %th Name
  %tbody
    - @agent_types.each do |type|
      %tr
        %td{style: "white-space: nowrap"}
          .btn-group
            %button.btn.btn-light.btn-sm.dl-edit-agent-type{"data-agent-type-id": "#{type.id}",
                                                            "data-target": "#dl-edit-agent-type-modal",
                                                            "data-toggle": "modal",
                                                            type: "button"}
              %i.fas.fa-pencil-alt
              Edit
            = link_to(admin_agent_type_path(type),
                      class: 'btn btn-danger btn-sm',
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete this agent type?' }) do
              %i.fa.fa-trash
              Delete
        %td= type.name
